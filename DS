//SMA line
plot (ssma,"SMA",linewidth=1,color=color.white)
//SMA line End

//Color Bar

bcolor = d < 20 ? color.white : d > 80 ? color.black : d > 75 ? d < 80 ? color.gray : na : d > 20 ? d < 25 ? color.yellow : na : na
barcolor(color=bcolor)

